    <title>Stock N Load - Login</title>
</head>
<body>
    <div class="card-container">
        <div class="card">
            <h1 style="color:#85F2A0">Stock N Load</h1>
            <h2 class="text-center mb-4" style="color:#85F2A0">Login</h2>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email" class="form-text">Email</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password" class="form-text">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <p class="form-text">Don't have an account yet? <a href="/register">Register here</a></p>
        </div>
        <img src="/img/login_splash.png">
    </div> <!--card-container-->
